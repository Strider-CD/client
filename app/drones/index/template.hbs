{{#link-to 'drones.new'}}New Drone{{/link-to}}

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Server</th>
      <th>Platform</th>
    </tr>
  </thead>

  <tbody>
    {{#each model as |drone|}}
      <tr class="drone-list-item status-{{drone.status}}">
        <td>{{#link-to 'drones.view' drone.id}}{{drone.name}}{{/link-to}}</td>
        <td>{{drone.server}}</td>
        <td>{{drone.platform}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
